                    class="
                      recipient-form__label
                      {{ recipient_form_label_classes }}
                    "
                    for="recipient-name-{{ section.id }}"
                  >
                    {{- 'recipient.form.name_label' | t -}}
                  </label>
                {%- endcapture -%}
              {%- endif -%}
    
              {%- capture recipient_name -%}
