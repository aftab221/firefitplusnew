                    aria-label="{{- 'recipient.form.send_on_placeholder' | t -}}"
                  {%- endunless -%}
                  type="date"
                  name="properties[Send on]"
                  autocomplete="send_on"
                  pattern="\d{4}-\d{2}-\d{2}"
                  value="{{ form.send_on }}"
                  data-recipient-form-input
                >
              {%- endcapture -%}
    
              {%- if recipient_form_label_position == 'top' -%}
                {{ recipient_date_label }}
                {{ recipient_date }}
              {%- else -%}
