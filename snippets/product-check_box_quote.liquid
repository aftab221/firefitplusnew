<!-- Backyard Delivery Quote -->

{% assign quote_text = block.settings.quote_text %}

<div class="yes-no-buttons" style="display: flex; align-items: flex-start; flex-direction: column;">
  <label for="product-addons">{{ quote_text }}</label>
  <div style="">
    <input type="radio" id="yesRadio" name="quoteOption" style="display: none;" onclick="showSelectedOption()" value="Backyard Delivery" name="properties[Quote]">
    <label for="yesRadio" style="padding: 5px 10px;width: 60px;background: white;border: 1px solid #A0A0A0;border-radius: 4px;height: 35px; cursor: pointer;">Yes</label>

    <input type="radio" id="noRadio" name="quoteOption" style="display: none;" onclick="showSelectedOption()" checked>
    <label for="noRadio" id="labelnoRadio" style="padding: 5px 10px;width: 60px;background: white;border: 1px solid #A0A0A0;border-radius: 4px;height: 35px; cursor: pointer;">No</label>

    <span id="selectedOption" style="color: red; font-size: 12px; margin-left: 5px;">*Required</span>
  </div>
</div>
