<script>

  function showSelectedOption() {
    var selectedOptionElement = document.getElementById("selectedOption");
    var yesRadio = document.getElementById("yesRadio");
    
    if (yesRadio.checked) {
      selectedOptionElement.textContent = "Yes";
      selectedOptionElement.style.color = "black";
    } else {
      selectedOptionElement.textContent = "No";
      selectedOptionElement.style.color = "black";
    }
  }
</script>

{% if product.type contains "Fire Pit" or product.type contains "Fire Tables" %}
<script>
    // Function to be executed after the entire page has loaded
    function onPageLoad() {
        // Find the button element by its class
        var atcButton = document.querySelector('.product-form--atc-button');
        
        // Find the radio buttons by their IDs
        var yesRadio = document.getElementById('yesRadio');
        var noRadio = document.getElementById('noRadio');

          noRadio.checked;

        // Set atcButton disabled initially
      //  atcButton.disabled = true;

        // Function to handle radio button click
        function handleRadioClick() {
            // Enable atcButton if either yesRadio or noRadio is checked
            atcButton.disabled = !(yesRadio.checked || noRadio.checked);
        }

        // Attach the handleRadioClick function to the change event of the radio buttons
        yesRadio.addEventListener('change', handleRadioClick);
        noRadio.addEventListener('change', handleRadioClick);
    }

    // Attach the onPageLoad function to the window.onload event
    window.onload = onPageLoad;
</script>
{% endif %}





