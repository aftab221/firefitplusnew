<style>
  .grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 20px;
  }
  @media screen and (max-width: 820px) {
    .grid {
      display: flex;
      flex-direction: column;
    }    
  }
  .calculator-img {
    position: relative;
    padding-top: 60%;
  }
  .calculator-img img {
    position: absolute;
    top: 0;
    width: 100%;
    height: 100%;
    object-position: center;
    object-fit: cover;
  }
  .form-grid {
    margin-top: 10px;
    display: flex;
    flex-direction: column;
    gap: 15px;
  }
  .form-grid .form-row {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
  }
  .form-grid .form-row .form-col:first {
    justify-content: start;
  }
  .form-grid .form-row .form-col:last-child {
    justify-content: flex-end;
  }
  .form-grid .form-row .form-col label,
  .form-grid .form-row .form-col span {
    font-size: 12px;
  }
  .form-grid .form-row .form-col {
    display: flex;
    gap: 10px;
    align-items: center;
  }
  .form-grid .form-row .form-col input {
    width: 65px;
    height: 40px;
    border-radius: 0px;
    border: 1px solid #313131;
    padding: 0 5px;
    font-size: 14px;
    text-align: center;
    outline: 0;
  }
  .form-grid .form-row .form-col button {
    background-color: #FF6F02;
    border: 0 solid;
    padding: 10px 15px;
    color: #fff;
    font-size: 12px;
    font-weight: 900;
    cursor: pointer;
  }
  .form-grid .form-row .form-col .calculator__total {
    font-weight: 900;
    font-size: 28px;
    color: #FF6F02;
  }
  /* Firefox */
  input[type=number] {
    -moz-appearance: textfield;
  }
  /* Chrome, Safari, Edge, Opera */
  input::-webkit-outer-spin-button,
  input::-webkit-inner-spin-button {
    -webkit-appearance: none;
    margin: 0;
  }
</style>

