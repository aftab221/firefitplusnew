<script>
function ffgc() {
    var fw = document.getElementById('fw').value;
    var fbw = document.getElementById('fbw').value;
    var fh = document.getElementById('fh').value;
    var fd = document.getElementById('fd').value;
    if (fw == '' || fbw == '' || fh == '' || fd == '') {
        alert("Please fill out all of the parameters!");
        if (fw == '') {
            setfocus('fw');
        } else if (fbw == '') {
            setfocus('fbw');
        } else if (fh == '') {
            setfocus('fh');
        } else if (fd == '') {
            setfocus('fd');
        }
    } else {
        fw = parseFloat(document.getElementById('fw').value);
        fbw = parseFloat(document.getElementById('fbw').value);
        fh = parseFloat(document.getElementById('fh').value);
        fd = parseFloat(document.getElementById('fd').value);
        if (isNaN(fw) || isNaN(fbw) || isNaN(fh) || isNaN(fd)) {
            alert("Enter Only Numeric values.");
            if (isNaN(fw)) {
                setfocus('fw');
            } else if (isNaN(fbw)) {
                setfocus('fbw');
            } else if (isNaN(fh)) {
                setfocus('fh');
            } else if (isNaN(fd)) {
                setfocus('fd');
            }
        } else {
            var sum = eval(fw + fbw) / 2;
            var ans = Math.round(sum * (fh * fd) / (231) * 12, 2);
            document.getElementById('ffgcans').innerHTML = ans;
        }
    }
}

function rfgc() {
    var rfpd = document.getElementById('rfpd').value;
    var rfpd2 = document.getElementById('rfpd2').value;
    if (rfpd == '' || rfpd2 == '') {
        alert("Please fill out all of the parameters!");
        if (rfpd == '') {
            setfocus('rfpd');
        } else if (rfpd2 == '') {
            setfocus('rfpd2');
        }
    } else {
        rfpd = parseFloat(document.getElementById('rfpd').value);
        rfpd2 = parseFloat(document.getElementById('rfpd2').value);
        if (isNaN(rfpd) || isNaN(rfpd2)) {
            alert("Enter Only Numeric values.");
            if (isNaN(rfpd)) {
                setfocus('rfpd');
            } else if (isNaN(rfpd2)) {
                setfocus('rfpd2');
            }
        } else {
            var ans = Math.round(eval(rfpd * rfpd * rfpd2 / 231 * 12 * 0.8), 2);
            document.getElementById('rfgcans').innerHTML = ans;
        }
    }
}

function sfgc() {
    var sfpl = document.getElementById('sfpl').value;
    var sfpw = document.getElementById('sfpw').value;
    var sfpd = document.getElementById('sfpd').value;
    if (sfpl == '' || sfpw == '' || sfpd == '') {
        alert("Please fill out all of the parameters!");
        if (sfpl == '') {
            setfocus('sfpl');
        } else if (sfpw == '') {
            setfocus('sfpw');
        } else if (sfpd == '') {
            setfocus('sfpd');
        }
    } else {
        sfpl = parseFloat(document.getElementById('sfpl').value);
        sfpw = parseFloat(document.getElementById('sfpw').value);
        sfpd = parseFloat(document.getElementById('sfpd').value);
        if (isNaN(sfpl) || isNaN(sfpw) || isNaN(sfpd)) {
            alert("Enter Only Numeric values.");
            if (isNaN(sfpl)) {
                setfocus('sfpl');
            } else if (isNaN(sfpw)) {
                setfocus('sfpw');
            } else if (isNaN(sfpd)) {
                setfocus('sfpd');
            }
        } else {
            var ans = Math.round(sfpl * sfpw * sfpd / 231 * 12, 2);
            document.getElementById('sfgcans').innerHTML = ans;
        }
    }
}

function fbc() {
    var fbd = document.getElementById('fbd').value;
    var fbgd = document.getElementById('fbgd').value;
    if (fbd == '' || fbgd == '') {
        alert("Please fill out all of the parameters!");
        if (fbd == '') {
            setfocus('fbd');
        } else if (fbgd == '') {
            setfocus('fbgd');
        }
    } else {
        fbd = parseFloat(document.getElementById('fbd').value);
        fbgd = parseFloat(document.getElementById('fbgd').value);
        if (isNaN(fbd) || isNaN(fbgd)) {
            alert("Enter Only Numeric values.");
            if (isNaN(fbd)) {
                setfocus('fbd');
            } else if (isNaN(fbgd)) {
                setfocus('fbgd');
            }
        } else {
            var glass = Math.round(((fbd * fbd * fbgd) / 231) * 12 * .8, 2);            
            var ans = Math.round(glass - (glass * 0.33), 2);
            document.getElementById('fbcans').innerHTML = ans;
        }
    }
}

function setfocus(id) {
  document.getElementById(id).focus();
}
</script>

